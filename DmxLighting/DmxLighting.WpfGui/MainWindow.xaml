<Window x:Class="DmxLighting.WpfGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DmxLighting.WpfGui"
        mc:Ignorable="d"
        Title="DMX Lighting Controller" Height="450" Width="800"
        Loaded="LoadSchema">
    <ScrollViewer Margin="5">
        <StackPanel Orientation="Vertical">
            <GroupBox Header="Fixture 1">
                <local:FixtureControl x:Name="Fixture1" />
            </GroupBox>
            <GroupBox Header="Fixture 2">
                <local:FixtureControl x:Name="Fixture2"/>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Window>

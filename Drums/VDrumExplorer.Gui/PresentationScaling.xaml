<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VDrumExplorer.Gui">
    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style TargetType="Menu">
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style TargetType="Button">
        <Setter Property="Padding" Value="10,4" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Margin to the left of a value when being displayed as a key/value pair. -->
    <Thickness x:Key="ValueMargin" Left="20" Top="0" Right="0" Bottom="0" />
    <Thickness x:Key="ValueMarginWithVertical" Left="20" Top="6" Right="0" Bottom="3" />
    <Thickness x:Key="ValueMarginWithMarginAbove" Left="20" Top="6" Right="0" Bottom="0" />

    <!-- Margin above a stack panel for vertical separation -->
    <Thickness x:Key="PanelMargin" Left="0" Top="10" Right="0" Bottom="0" />
</ResourceDictionary>
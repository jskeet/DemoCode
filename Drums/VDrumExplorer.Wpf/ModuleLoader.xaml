<Window x:Class="VDrumExplorer.Wpf.ModuleLoader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VDrumExplorer.Wpf"
        mc:Ignorable="d"
        Title="VDrum Module Loader" Height="450" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Click="LoadFile" Margin="5" Padding="5,2">Load file</Button>
            <Button x:Name="loadFromDeviceButton" Click="LoadFromDevice" IsEnabled="False" Margin="5" Padding="5,2">Load from device</Button>
            <Button x:Name="saveLogButton" Click="SaveLog" Margin="5" Padding="5,2">Save log file</Button>
        </StackPanel>
        <ScrollViewer>
            <GroupBox Header="Log" Margin="5">
                <TextBlock x:Name="logPanel" Margin="5"/>
            </GroupBox>
        </ScrollViewer>
    </DockPanel>
</Window>
